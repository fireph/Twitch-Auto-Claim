{
  "name": "Twitch Auto Claim",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Automatically claims watch bonus on Twitch.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png",
    "512": "icons/icon512.png"
  },
  "default_locale": "en",
  "permissions": [
    "contentSettings",
    "https://www.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.twitch.tv/*"
      ],
      "js": [
        "src/inject/inject.js"
      ]
    }
  ]
}